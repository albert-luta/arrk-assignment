{
  "extends": ["config:base"],
  "semanticCommits": "enabled",
  "dependencyDashboard": true,
  "reviewers": ["@lutaalbert"],
  "timezone": "Europe/Bucharest",
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  }
}
