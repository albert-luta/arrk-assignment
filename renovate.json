{
  "extends": ["config:base"],
  "semanticCommits": "enabled",
  "reviewers": ["@lutaalbert"],
  "timezone": "Europe/Bucharest",
  "packageRules": [
    {
      "groupName": "non-major",
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true,
      "schedule": ["before 2am"]
    }
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "schedule": ["before 5am"]
  }
}
