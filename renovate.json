{
  "extends": ["config:base"],
  "semanticCommits": "enabled",
  "reviewers": ["@lutaalbert"],
  "timezone": "Europe/Bucharest",
  "schedule": [
    "after 10pm every weekday",
    "before 5am every weekday",
    "every weekend"
  ],
  "labels": ["dependency"],
  "vulnerabilityAlerts": {
    "labels": ["security"],
    "automerge": true
  },
  "lockFileMaintenance": {
    "labels": ["lock file maintenance"],
    "enabled": true,
    "automerge": true
  },
  "pin": {
    "labels": ["pin"],
    "automerge": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchCurrentVersion": "!/^0/",
      "automerge": true
    }
  ]
}
